<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:local="clr-namespace:ResourceRequestXamarinForms"
		x:Class="ResourceRequestXamarinForms.ResourceRequestXamarinFormsPage"
		Title="Resource Request" >
	 <StackLayout Spacing="20" Padding="20"
                         VerticalOptions="StartAndExpand">
                <Entry Placeholder="First Name" x:Name="FirstName"
                       Text="{Binding FirstName}"/>
		       <Entry Placeholder="Middle Name" x:Name="MiddleName"
                       Text="{Binding MiddleName}"/>
                <Entry Placeholder="Last Name" x:Name="LastName"
                       Text="{Binding LastName}"/>
                <Entry Placeholder="Age" x:Name="Age"
                       Text="{Binding Age}"/>
		       <Entry Placeholder="Height" x:Name="Height"
                       Text="{Binding Height}"/>
                <Entry Placeholder="Birth Date" x:Name="BirthDate"
                       Text="{Binding BirthDate}"/>
                <Button Text="Submit" TextColor="White"
                        BackgroundColor="#417dd4"
                        Command="{Binding SubmitCommand}"/>
				<Label Text="" x:Name="Output" FontSize="18"/>


            </StackLayout>
</ContentPage>
